# LLM Provider: "openai" or "azure"
LLM_PROVIDER=openai

# OpenAI (required when LLM_PROVIDER=openai)
OPENAI_API_KEY=sk-your-key-here

# ChromaDB
CHROMA_PERSIST_DIR=./chroma_db
CHROMA_COLLECTION_NAME=itb_regulations

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVER_TOP_K=4

# PDF source
PDF_DIR=./data/pdfs

# CORS (JSON array) - add your Azure domain in production
CORS_ORIGINS=["http://localhost:5173"]

# Debug - set to false in production
DEBUG=true
